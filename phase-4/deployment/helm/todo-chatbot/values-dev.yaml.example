# Development Configuration for Todo Chatbot
# This file contains environment-specific overrides for local Minikube deployment
# IMPORTANT: This file contains secrets and should NOT be committed to git

global:
  environment: development

frontend:
  replicaCount: 1
  env:
    NEXT_PUBLIC_API_URL: http://localhost:30081

backend:
  replicaCount: 1  # Single replica for development
  env:
    LOG_LEVEL: DEBUG  # More verbose logging for development
  secrets:
    # REQUIRED: Replace with your actual values
    DATABASE_URL: "postgresql://user:password@host.neon.tech:5432/database?sslmode=require"
    BETTER_AUTH_SECRET: "your-32-character-secret-here-change-this-value"
    NEXT_PUBLIC_OPENROUTER_KEY: "sk-or-v1-your-openrouter-key-here"
